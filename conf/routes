# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home/basic pages
GET     /                           controllers.Application.index
GET     /home                       controllers.Application.home
#GET     /test                       controllers.Application.test
POST    /test                       controllers.Application.test

# Authentication
GET     /auth/google                controllers.authentication.Google.login
GET     /auth/google/callback       controllers.authentication.Google.callback
GET     /auth/cas                   controllers.authentication.Cas.login
GET     /auth/cas/callback          controllers.authentication.Cas.callback
POST    /auth/password              controllers.authentication.Password.login
POST    /auth/createAccount         controllers.authentication.Password.createAccount

# Course pages
GET     /course/create              controllers.Courses.createPage
POST    /course/create              controllers.Courses.create
GET     /course/:id                 controllers.Courses.view(id: Long)
POST    /course/:id/ltiAuth         controllers.Courses.ltiAuth(id: Long)
GET     /course/:id/keyAuth         controllers.Courses.keyAuth(id: Long)
POST    /course/:id/addContent      controllers.Courses.addContent(id: Long)

# Content pages
GET     /content                    controllers.ContentController.mine
GET     /content/create             controllers.ContentController.createPage
POST    /content/create             controllers.ContentController.create
GET     /content/:id                controllers.ContentController.view(id: Long)
GET     /content/:id/delete         controllers.ContentController.delete(id: Long)





GET     /profile                    controllers.Application.profile
POST    /profile/changeName         controllers.Application.changeName


# Watching videos/Levels of playback
GET     /watch                      controllers.Application.watch
GET     /watch/:id                  controllers.Pages.levelSelect(id: Long)
GET     /watch/:id/1                controllers.Pages.level1(id: Long)
GET     /watch/:id/2                controllers.Pages.level2(id: Long)
GET     /watch/:id/3                controllers.Pages.level3(id: Long)
GET     /watch/:id/4                controllers.Pages.level4(id: Long)
GET     /watch/:id/5                controllers.Pages.level5(id: Long)
GET     /watch/:id/6                controllers.Pages.level6(id: Long)

# Editing caption tracks
GET     /edit                       controllers.Application.edit

# Viewing code examples
GET     /code                       controllers.Application.code

# API wrapper until cross domain works
GET     /api                        controllers.Application.apiWrapperGet

# Google translate
GET     /gt/:src/:dest/:text        controllers.GoogleTranslate.translate(src: String, dest: String, text: String)


# Documentation
GET     /help/teacher               controllers.documentation.Teacher.view(page: String = "index")
GET     /help/teacher/:page         controllers.documentation.Teacher.view(page: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
